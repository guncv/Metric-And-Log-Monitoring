{
    "index_patterns": ["logstash-*"],
    "template": {
      "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0
      },
      "mappings": {
        "properties": {
          "@timestamp": { "type": "date" },
          "status_code": { "type": "keyword" },
          "endpoint": { "type": "keyword" },
          "remote_addr": { "type": "ip" },
          "message": { "type": "text" },
          "log": {
            "properties": {
              "file": {
                "properties": {
                  "path": { "type": "keyword" }
                }
              }
            }
          }
        }
      }
    }
  }
  